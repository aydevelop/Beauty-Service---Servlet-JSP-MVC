<div class="lang" style="margin-left: 50px; padding: 10px; display: inline-block">
    <span>Language: </span>
    <c:forEach var="locale" items="${locales}">
        <a style="padding: 4px; font-size: 25px; ${ locale eq defaultLocale ? "border: 1px solid black": "" }"
           href="/home/lang-change?lang=${locale}">${locale}</a>
    </c:forEach>
</div>